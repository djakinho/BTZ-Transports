@model BTZTransports.Models.Motorista

<form method="post" asp-action="DeletePost">
    <input asp-for="Id" hidden />
    <div class="border p-3">

        <div class="form-group row">
            <h2 class="text-info pl-3"> Deletar Motorista</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Nome">Nome</label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Nome" disabled class="form-control" />
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Cpf">CPF</label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Cpf" disabled class="form-control" />
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Cnh">CNH</label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Cnh" disabled class="form-control" />
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="CategoriaCnh">Categoria CNH</label>
                    </div>
                    <div class="col-8">
                        <input asp-for="CategoriaCnh" disabled class="form-control" />
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="DataNascimento">Data de Nascimento</label>
                    </div>
                    <div class="col-8">
                        <input asp-for="DataNascimento" disabled class="form-control" />
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Status">Status</label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Status" disabled class="form-control" />
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                            <input type="submit" class="btn btn-danger w-100" value="Deletar" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100">Voltar</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @*Keep this empty*@
            </div>
        </div>
    </div>

</form>

@section Scripts {

    @{
        <partial name="_ValidationScriptsPartial" />
    }

} 