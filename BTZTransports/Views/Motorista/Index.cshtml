@model IEnumerable<BTZTransports.Models.Motorista>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Lista de Motoristas</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Motorista" asp-action="Create" class="btn btn-primary">
                Adicionar Novo Motorista
            </a>
        </div>
    </div>

    <br /><br />

    @if (Model.Count() > 0 && Model != null)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Nome do Motorista
                    </th>
                    <th>
                        CPF
                    </th>
                    <th>
                        CNH
                    </th>
                    <th>
                        Categoria CNH
                    </th>
                    <th>
                        Data de Nascimento
                    </th>
                    <th>
                        Status
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                <tr>
                    <td width="50%">@obj.Nome</td>
                    <td width="30%">@obj.Cpf</td>
                    <td width="30%">@obj.Cnh</td>
                    <td width="30%">@obj.CategoriaCnh</td>
                    <td width="30%">@obj.DataNascimento</td>
                    <td width="30%">@obj.Status</td>
                    <td class="text-center">
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Motorista" asp-route-Id="@obj.Id" asp-action="Edit" class="btn btn-primary mx-2">
                                Editar
                            </a>
                            <a asp-controller="Motorista" asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger mx-2">
                                Deletar
                            </a>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>Não há Motoristas para exibir.</p>
    }

</div>